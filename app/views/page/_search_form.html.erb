<span class="pull-right">
  <%= form_tag(shop_path, method: :get, role: "search", class:"form-inline") do %>
    <div class="form-group">
      <%= label_tag fa_icon('search') %>
      <%= text_field_tag(:search, nil, placeholder: "Search Store", class: "form-control input-sm") %>
    </div>
    <%= submit_tag("Search", class: "btn btn-primary btn-sm") %>
  <% end %>
</span>