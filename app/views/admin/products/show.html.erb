<div class="container-fluid">

  <div>
    <%= image_tag @product.avatar.url(:medium) %>
  </div>
  <h2><%= @product.name %></h2>
  <p>
    By <strong><%= @product.brand.try(:name) %></strong>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency @product.current_price %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= @product.brand.try(:name) %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @product.category.try(:name) %>
  </p>
</div>

<%= link_to 'Edit', edit_admin_product_path(@product) %> |
<%= link_to 'Back', admin_products_path %>