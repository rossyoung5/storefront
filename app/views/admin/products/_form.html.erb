<%= simple_form_for([:admin, @product]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :current_price, input_html: {min: 0} %>
    <%= f.input :quantity, input_html: {min: 0} %>
    <%= f.input :description %>
    <%= f.association :brand %>
    <%= f.association :category %>
    <%= f.input :avatar, as: :file, label: "Upload a Product Image" %>
    <div>
    <% if @product.avatar.exists? %>
      <%= label_tag "Current Image" %>
      <% image_tag @product.avatar.url(:thumb) %>
    <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
