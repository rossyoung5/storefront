<table class="table">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% cart.line_items.each do |item| %>
      <tr>
        <td><%= image_tag item.product.avatar.url(:thumb), class: "img-responsive img-thumbnail" %></td>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= number_to_currency item.total %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container-fluid">
  <h4 class= "text-muted">Order Subtotal: <%= number_to_currency cart.subtotal %></h4>
<!-- tax -->
  <h3 class="price">Total: <%= number_to_currency cart.total %></h3>
</div>